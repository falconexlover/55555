# Пример файла .env для Vercel
# Скопируйте этот файл в .env для локальной разработки
# или добавьте эти переменные в настройках проекта Vercel

# ===== НАСТРОЙКИ БАЗЫ ДАННЫХ =====
# Необходимы для работы сайта на Vercel
DB_HOST=localhost
DB_NAME=db_hotel
DB_USER=db_user
DB_PASSWORD=db_password

# ===== НАСТРОЙКИ САЙТА =====
SITE_URL=https://your-domain.vercel.app
SITE_NAME=Гостиница "Лесной дворик"
ADMIN_EMAIL=admin@example.com

# ===== НАСТРОЙКИ ПОЧТЫ =====
# Для отправки уведомлений о бронированиях
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=user@example.com
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="Гостиница Лесной дворик"

# ===== НАСТРОЙКИ API =====
# API-ключ Яндекс.Карт для отображения карты на сайте
YANDEX_MAPS_API_KEY=your_api_key

# ===== НАСТРОЙКИ БЕЗОПАСНОСТИ =====
# Секретный ключ для шифрования данных
APP_SECRET_KEY=change_this_to_a_random_string

# ===== НАСТРОЙКИ ЛОГИРОВАНИЯ =====
# Уровень логирования (debug, info, warning, error)
LOG_LEVEL=info

# Конфигурация базы данных MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lesnoy-dvorik?retryWrites=true&w=majority

# Секретный ключ для JWT
JWT_SECRET=your-secret-key-for-jwt-tokens

# Настройки API
API_URL=https://lesnoy-dvorik.netlify.app/.netlify/functions

# Настройки для отправки email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=Лесной дворик <info@lesnoy-dvorik.ru>

# Настройки для разработки
NODE_ENV=development
DEBUG=true

# Настройки для Netlify
NETLIFY_SITE_ID=your-netlify-site-id
NETLIFY_AUTH_TOKEN=your-netlify-auth-token 