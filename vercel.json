{
    "version": 2,
    "functions": {
        "api/**/*.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        { "src": "/favicon.ico", "dest": "/api/public/favicon.ico" },
        { "src": "/css/(.*)", "dest": "/api/css/$1" },
        { "src": "/js/(.*)", "dest": "/api/js/$1" },
        { "src": "/assets/(.*)", "dest": "/api/assets/$1" },
        { "src": "/pages/(.*)", "dest": "/api/pages/$1" },
        { "src": "/admin/index.php", "dest": "/api/admin/index.php" },
        { "src": "/admin/login_form.php", "dest": "/api/admin/login_form.php" },
        { "src": "/admin", "dest": "/api/admin/index.php" },
        { "src": "/admin/(.*)", "dest": "/api/admin/$1" },
        { "src": "/db_test.php", "dest": "/api/db_test.php" },
        { "src": "/test.php", "dest": "/api/test.php" },
        { "src": "/test.html", "dest": "/api/public/test.html" },
        { "src": "/", "dest": "/api/index.html" },
        { "src": "/static/(.*)", "dest": "/api/static-serve.php" },
        { "src": "/(.*)\\.html", "dest": "/api/static-serve.php" },
        { "src": "/(.*)\\.php", "dest": "/api/$1.php" },
        { "src": "/(.*)", "dest": "/api/static-serve.php" }
    ],
    "build": {
        "env": {
            "PHP_VERSION": "8.1"
        }
    }
} 